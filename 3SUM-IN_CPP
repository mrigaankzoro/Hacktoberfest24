#include <iostream>
#include <vector>
using namespace std;

// Function to find if there exists a triplet with a sum equal to 'sum'
bool find3Numbers(const vector<int>& arr, int sum) 
{
    int n = arr.size();
    
    // Iterate through the array fixing the first element
    for (int i = 0; i < n - 2; i++)
    { 
        // Iterate for the second element
        for (int j = i + 1; j < n - 1; j++)
        { 
            // Calculate the required third number
            int required = sum - (arr[i] + arr[j]);
            // Check if the required number exists in the remaining array
            for (int k = j + 1; k < n; k++)
            { 
                if (arr[k] == required)
                { 
                    cout << "Triplet is " << arr[i] << ", " << arr[j] << ", " << arr[k] << endl; 
                    return true; 
                } 
            } 
        } 
    } 

    // If no triplet was found
    return false; 
} 

// Driver code
int main() 
{ 
    vector<int> arr = { 1, 4, 45, 6, 10, 8 }; 
    int sum = 22; 

    if (!find3Numbers(arr, sum)) {
        cout << "No triplet found" << endl;
    }
    
    return 0; 
}
