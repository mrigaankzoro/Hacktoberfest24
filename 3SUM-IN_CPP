def find3Numbers(arr, target_sum):
    n = len(arr)
    
    # Sort the array to use a two-pointer technique later
    arr.sort()
    
    # Iterate through the array to find the triplet
    for i in range(n - 2):
        # Use two pointers to find the remaining two numbers
        left = i + 1
        right = n - 1
        
        while left < right:
            current_sum = arr[i] + arr[left] + arr[right]
            
            if current_sum == target_sum:
                print(f"Triplet is {arr[i]}, {arr[left]}, {arr[right]}")
                return True
            elif current_sum < target_sum:
                left += 1  # Increase the sum by moving the left pointer to the right
            else:
                right -= 1  # Decrease the sum by moving the right pointer to the left
    
    return False

# Driver code
if __name__ == "__main__":
    arr = [1, 4, 45, 6, 10, 8]
    target_sum = 22
    if not find3Numbers(arr, target_sum):
        print("No triplet found")
